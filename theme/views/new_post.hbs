{{>header}}
<main class="grid">
    <div class="row">
        <div class="column column_12">
            <form class='post-form' method="post">
                <label class="post-form__label" for="post-title">Title</label>
                <input class="post-form__input" id="post-title" name="title" type="text">
                <label class="post-form__label" for="post-preview">Preview:</label>
                <textarea class="post-form__input post-form__input_text-area" name="preview" id="post-preview"></textarea>
                <label class="post-form__label" for="post-content">Post:</label>
                <textarea class="post-form__input post-form__input_text-area" name="content" id="post-content"></textarea>
                <input type="submit" value="Post">
            </form>
        </div>
        <!--<div class="column column_3">
            {{>nav_menu}}
        </div>-->
    </div>
</main>
{{>footer}}
<script type="text/javascript" src="{{path_prefix}}js/tinymce/tinymce.min.js"></script>

<script type="text/javascript">
    tinyMCE.init({
        mode : "textareas",
        body_class: 'post-form__input',
        plugins: ["link", "image", "media", "table"],
        menu: {
            file: null,
            edit: {title: 'Edit', items: 'undo redo | cut copy paste pastetext | selectall'},
            insert: {title: 'Insert', items: 'link media image | template hr'},
            view: {title: 'View', items: 'visualaid'},
            format: {title: 'Format', items: 'bold italic underline strikethrough superscript subscript | formats | removeformat'},
            table: {title: 'Table', items: 'inserttable tableprops deletetable | cell row column'},
            tools: {title: 'Tools', items: 'spellchecker code'}
        }
    });
</script>
<script src="{{path_prefix}}js/form-auto-size.js"></script>
